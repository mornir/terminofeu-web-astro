---
import Layout from '../layouts/Layout.astro'
import { getLocale } from 'astro-i18n-aut'

import { getTerms } from '@/sanity/sanity'
import generateTermsList from '@/utils/generateTermsList'

const terms = await getTerms(getLocale(Astro.url))

const list = generateTermsList(terms)
---

<Layout title="Suche">
  <h1 class="text-5xl">Terminofeu</h1>
  <ul>
    {list.map((item) => <li>{item.term}</li>)}
  </ul>
</Layout>
